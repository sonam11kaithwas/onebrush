                    android:gravity="center"
                    android:lines="2"
                    android:text="@string/collection_of_personal_data"
                    android:textColor="@color/navy"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/tx2_lable2"
