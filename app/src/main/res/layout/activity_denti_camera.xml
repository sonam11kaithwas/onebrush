<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="opencameramodel"
            type="com.advantal.onebrush.denti_qus_pkg.open_camera_pkg.open_camera_view_pkg.OpenCameraViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".denti_qus_pkg.Denti_Camera_Activity">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            app:cardCornerRadius="@dimen/_15sdp">

            <ImageView
                android:id="@+id/click_image"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_280sdp"
                android:layout_gravity="center"
                android:background="@drawable/image_bg"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_add" />
        </androidx.cardview.widget.CardView>

        <!-- add ImageView to display the captured image-->


    </LinearLayout>
</layout>